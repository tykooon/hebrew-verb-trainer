@page "/"
@using static HebrewVerb.BlazorApp.Common.TextContent
@rendermode InteractiveServer

<PageTitle>@pageTitle</PageTitle>


<MudContainer MaxWidth="MaxWidth.Medium">
    <MudPaper Class="ma-3 pa-3">
        <MudText Align="Align.Center" Typo="Typo.h4">@Home_Welcome</MudText>
        <MudText Align="Align.Start" Typo="Typo.h6">@Home_Disclaimer</MudText>
        <MudDivider Class="m-1"></MudDivider>
        <MudText Align="Align.Start" Typo="Typo.body1">@((MarkupString)Home_Remark)</MudText>

        <MudGrid Justify="Justify.SpaceAround">
            <MudItem xs="10" sm="6" md="5">
                <HomePageCard HeaderText=@Home_Card1_Title SubtitleText=@Home_Card1_Subtitle Href="/training">
                    @Home_Card1_Text
                </HomePageCard>
            </MudItem>
            <MudItem xs="10" sm="6" md="5">
                <HomePageCard HeaderText=@Home_Card2_Title SubtitleText=@Home_Card2_Subtitle Href="/verbsets">
                    @Home_Card2_Text                    
                </HomePageCard>
            </MudItem>
            <MudItem xs="10" sm="6" md="5">
                <HomePageCard HeaderText=@Home_Card3_Title SubtitleText=@Home_Card3_Subtitle Href="/error">
                    @Home_Card3_Text
                </HomePageCard>
            </MudItem>
            <MudItem xs="10" sm="6" md="5">
                <HomePageCard HeaderText=@Home_Card4_Title SubtitleText=@Home_Card4_Subtitle Href="/error">
                    @Home_Card4_Text                    
                </HomePageCard>
            </MudItem>
            <MudItem xs="10" sm="6" md="5">
                <HomePageCard HeaderText=@Home_Card5_Title SubtitleText=@Home_Card5_Subtitle Href="/error">
                    @Home_Card5_Text
                </HomePageCard>
            </MudItem>
            <MudItem xs="10" sm="6" md="5">
                <HomePageCard HeaderText=@Home_Card6_Title SubtitleText=@Home_Card6_Subtitle Href="/error">
                    @Home_Card6_Text
                </HomePageCard>
            </MudItem>
        </MudGrid>
         <MudText Align="Align.Center" Typo="Typo.h6" Class="my-2">
            Вот и всё. Не теряем время. Выбираем нужные настройки и запускаем тренировку. Удачи!
         </MudText>
    </MudPaper>
</MudContainer>

@code{
    private string pageTitle = "Let's start!";
}